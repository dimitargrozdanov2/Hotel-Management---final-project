@model HomeIndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<section class="section-margin section-margin--small">
    <div class="container">
        <div class="section-intro text-center pb-80px">
            <div class="section-intro__style">
                <img src="~/images/home/bed-icon.png" alt="">
            </div>
            <h2>Explore Our Businesses</h2>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        @foreach (var business in Model.Businesses)
                        {
                            <partial name="_IndexBusinessPartial" model="business" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>