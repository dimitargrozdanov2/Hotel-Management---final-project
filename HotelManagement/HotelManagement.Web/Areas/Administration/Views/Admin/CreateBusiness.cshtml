@model CreateBusinessViewModel

@{
    ViewData["Title"] = "Create Business";
}

<div class="divider">
    <div class="text">
        <h2>Create Business</h2>
    </div>
</div>
<div class="row">
    &nbsp;
</div>

<div class="form-row">
    <form id="create-business-form" class="col-lg-7" asp-area="Administration"
          asp-controller="Admin" asp-action="CreateBusiness" data-id="@Model.Id" method="post">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Location">Location</label>
            <input class="form-control" asp-for="Location" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input class="form-control" asp-for="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button class="btn btn-warning" type="submit">Create</button>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Reset</a>
</div>
