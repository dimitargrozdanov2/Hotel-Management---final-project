@model ListUsersViewModel
@inject IUserManagerWrapper UserManager

@{
    ViewData["Title"] = "All Users";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

<div class="divider">
    <div class="text-center">
        <h2>All Users</h2>
    </div>
</div>

<div class="row">
    <div class="col-sm-2">
        <a href="#" class="btn btn-primary" style="margin-bottom:5%" data-target="#MyModal" data-toggle="modal">
            <i class="fas fa-plus-circle"></i>
            Create User
        </a>
    </div>
</div>

<table id="table" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th class="info ">Username</th>
            <th class="info ">Email</th>
            <th class="info ">Role</th>
            <th class="info" id="Operations" width="25%">Operations </th>
        </tr>
    </thead>
    @foreach (var user in Model.Users)
    {
        <partial name="_UserPartialView" model="user" />
    }
</table>

@*Popup modal with registration form*@
<div class="modal fade" id="MyModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Create user</h4>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <form id="formRegister" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-block btn-success" id="CreateUserRecord">Register</a>
            </div>
        </div>
    </div>
</div>

@*Popup modal for changing role*@
<partial name="_PromoteUserModalPartial" model="new PromoteRoleViewModel { RoleList = Model.RoleList}" />




@section Scripts {

    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#table').DataTable({
                responsive: true,
                stateSave: true,
                //"lengthChange": false,
                "iDisplayLength": 10,
                "lengthMenu": [[5, 10, 25, -1], [5, 10, 25, "All"]],
                "columns": [
                    null,
                    null,
                    null,
                    { "orderable": false }
                ]
            });
            $("#formRegister").on('submit', function (event) {
                console.log("test");

            });
