@model IndexViewModel
@inject IUserManagerWrapper UserManager

@{
    ViewData["Title"] = "All Users";
}
<div class="divider">
    <div class="text-center">
        <h2>All Users</h2>
    </div>
</div>

<div class="row">
    <div class="col-sm-2">
        <a class="btn btn-primary btn-block" style="margin-bottom:10px" 
            asp-area="" asp-controller="Account" asp-action="Register">
            <i class="fas fa-plus-circle"></i>
            Create User
        </a>
    </div>
</div>
<table id="table" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th class="info ">Username</th>
            <th class="info ">Email</th>
            <th class="info ">Role</th>
            <th class="info" id="Operations" width="25%">Operations </th>
        </tr>
    </thead>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@await UserManager.GetRole(user.UserName)</td>
            <td>
                @*<form asp-area="Administration" asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Id">
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">Delete user</button>
                        </div>

                    </form>*@
                <a class="btn btn-success btn-sm"
                   asp-area="Administration" asp-controller="Admin" asp-action="PromoteUser" asp-route-id="@user.Id">
                    <i class="fas fa-pencil-alt"></i>
                    Promote user
                </a>
                <a class="btn btn-danger btn-sm float-right"
                   asp-area="Administration" asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Id">
                    <i class="fa fa-trash"></i>
                    Delete user
                </a>
            </td>
        </tr>
    }
</table>

