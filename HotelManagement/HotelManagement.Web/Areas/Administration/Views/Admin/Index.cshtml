@model IndexViewModel
@inject IUserManagerWrapper UserManager

@{
    ViewData["Title"] = "All Users";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

<div class="divider">
    <div class="text-center">
        <h2>All Users</h2>
    </div>
</div>

<div class="row">
    <div class="col-sm-2">
        <a href="#" class="btn btn-primary" style="margin-bottom:5%" data-target="#MyModal" data-toggle="modal">
            <i class="fas fa-plus-circle"></i>
            Create User
        </a>
    </div>
</div>

<table id="table" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th class="info ">Username</th>
            <th class="info ">Email</th>
            <th class="info ">Role</th>
            <th class="info" id="Operations" width="25%">Operations </th>
        </tr>
    </thead>
    @foreach (var user in Model.Users)
    {
        <tr class="deleteUserRow" id="user-tr-@user.Id">
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@await UserManager.GetRole(user.UserName)</td>
            <td>
                @*<form asp-area="Administration" asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Id">
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">Delete user</button>
                        </div>

                    </form>*@
                <a class="btn btn-success btn-sm" data-target="#MyModal2" data-toggle="modal" att="@user.Id"
                   asp-area="Administration" asp-controller="Admin" asp-action="PromoteUser" asp-route-id="@user.Id">
                    <i class="fas fa-pencil-alt"></i>
                    Promote user
                </a>
                @*@using (Html.BeginForm("Delete", "Account", new { name = user.UserName }))
                    { }*@
                <div class="col-sm-2" style="margin-top:5%"></div>
                <button class="btn btn-danger btn-sm delete-user-button" att="@user.Id">
                    <i class="fa fa-trash"></i> Delete user
                </button>

                @*<form class="delete-form "  asp-action="Delete" asp-controller="Account" asp-route-name="@user.UserName" method="post">
                        <input type="hidden" class="userValue" value="@user.UserName" />

                    </form>*@
            </td>
        </tr>
    }
</table>

@*Popup modal with registration form*@
<div class="modal fade" id="MyModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Create user</h4>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <form id="formRegister" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-block btn-success" id="CreateUserRecord">Register</a>
            </div>
        </div>
    </div>
</div>

@*Popup modal for changing role*@

<div class="modal fade" id="MyModal2">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Promote user</h4>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <form id="formPromote" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <div class="form-group">
                            <label asp-for="RoleList">List of Roles</label>
                            <select asp-for="RoleList" class="custom-select" asp-items="@Model?.RoleList"></select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-block btn-success" id="PromoteUser">Promote</a>
            </div>
        </div>
    </div>
</div>

<span id="anti-forgery-span">@Html.AntiForgeryToken()</span>



@section Scripts {

    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#table').DataTable({
                responsive: true,
                stateSave: true,
                //"lengthChange": false,
                "iDisplayLength": 10,
                "lengthMenu": [[5, 10, 25, -1], [5, 10, 25, "All"]],
                "columns": [
                    null,
                    null,
                    null,
                    { "orderable": false }
                ]
            });
            $("#CreateUserRecord").click(function (event) {

                event.preventDefault();

                var myformdata = $("#formRegister").serialize();

                console.log(myformdata);
                $.post("/Account/RegisterUser", myformdata)
                    .done(function (dataResponse) {

                        toastr.options.onHidden = function () {
                            window.location.reload();
                        };

                        toastr.options.timeOut = 100;
                        toastr.options.fadeOut = 100;

                        toastr.success(dataResponse);

                    }).fail(function (dataResponse) {

                        for (var key in dataResponse.responseJSON) {

                            var result = (dataResponse.responseJSON[key].description).toString();
                            toastr.error(result);

                        }
                    });
            })

        $("#PromoteUser").click(function (event) {
            var $this = $(this);
            console.log($this);

            var idOfUserToDelete = $this.attr('att');

            console.log(idOfUserToDelete);
            var antiForgery = ($('#anti-forgery-span').find('input'))[0];

            var postData = "userId=" + idOfUserToDelete + "&" + antiForgery.name + "=" + antiForgery.value;

            $.post("/Administration/Admin/PromoteUser", postData)
                .done(function (dataResponse) {

                    toastr.options.onHidden = function () {
                        window.location.reload();
                    };

                    toastr.options.timeOut = 100;
                    toastr.options.fadeOut = 100;

                    toastr.success(dataResponse);

                }).fail(function (dataResponse) {

                    for (var key in dataResponse.responseJSON) {

                        var result = (dataResponse.responseJSON[key].description).toString();
                        toastr.error(result);

                    }
                });
        })
        });
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/deleteuser.js"></script>
}
