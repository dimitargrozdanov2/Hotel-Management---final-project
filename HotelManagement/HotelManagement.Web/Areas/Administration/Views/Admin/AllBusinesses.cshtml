@model ListBusinessesViewModel

@{
    ViewData["Title"] = "All Businesses";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

<div class="divider">
    <div class="text-center">
        <h2>All Businesses</h2>
    </div>
</div>

<div class="row">
    <div class="col-sm-2">
        <a href="#" class="btn btn-primary" style="margin-bottom:5%" data-target="#CreateBusinessModal" data-toggle="modal">
            <i class="fas fa-plus-circle"></i>
            Create Business
        </a>
    </div>
</div>
<table id="table" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th class="info ">Name</th>
            <th class="info ">Location</th>
            <th class="info ">Description</th>
            <th class="info" id="Operations" width="25%">Operations </th>
        </tr>
    </thead>
    @foreach (var business in Model.Businesses)
    {
        <partial name="_BusinessPartialView" model="business" />
    }
</table>


@*Popup modal for creating business*@
<div class="modal fade" id="CreateBusinessModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Create business</h4>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <form id="formCreateBusiness" asp-area="Administration" asp-controller="Admin" asp-action="CreateBusiness">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Location"></label>
                        <input asp-for="Location" class="form-control" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div>
                        <input type="submit" class="btn btn-block btn-success" id="CreateBusinessRecord" value="Create Business" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#table').DataTable({
                responsive: true,
                stateSave: true,
                //"lengthChange": false,
                "iDisplayLength": 10,
                "lengthMenu": [[5, 10, 25, -1], [5, 10, 25, "All"]],
                "columns": [
                    null,
                    null,
                    null,
                    { "orderable": false }
                ]
            });
        });
    </script>
    <script src="~/js/createbusiness.js"></script>
}