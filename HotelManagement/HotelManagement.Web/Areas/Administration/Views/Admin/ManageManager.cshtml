@model ManagerManageViewModel

@{
    ViewData["Title"] = "Add Manager";
}

<div class="divider">
    <div class="text">
        <h2>Add Manager</h2>
    </div>
</div>
<div class="row">
    &nbsp;
</div>

<div class="form-row">
    <form class="col-lg-7" method="post">

        <input type="hidden" asp-for="LogbookName" />

        <div class="form-group">
            <label asp-for="ManagerEmail">Please enter manager email to assign/unassign manager from logbook.</label>
            <input class="form-control" asp-for="ManagerEmail" />
            <span asp-validation-for="ManagerEmail"></span>
        </div>

        <div class="form-group">
            <button class="btn btn-warning" type="submit">Assign</button>
        </div>
    </form>
</div>